<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TextBlockHeading" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="StyleTextBlockTitulo">
        <Style.Setters>
            <Setter Property="Foreground" Value="#FF575757"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style.Setters>
    </Style>

    <!--#FFFA6800-->
    <Style TargetType="{x:Type TextBlock}" x:Key="StyleTextBlockResumo">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource Accent}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style.Setters>
    </Style>
    
</ResourceDictionary>