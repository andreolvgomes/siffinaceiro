<UserControl x:Class="SIF.Aplicacao.UserControls.Separador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             >
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Height="3">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.975,0.5" StartPoint="0.005,0.5">
                    <GradientStop Color="#00ECAD25" Offset="1"/>
                    <GradientStop Color="{DynamicResource AccentColor}" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Grid.Column="1" Height="3">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.975,0.5" StartPoint="0.005,0.5">
                    <GradientStop Color="{DynamicResource AccentColor}" Offset="1"/>
                    <GradientStop Color="#00ECAD25" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
