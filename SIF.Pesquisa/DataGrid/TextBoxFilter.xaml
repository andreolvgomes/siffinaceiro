<UserControl x:Class="SIF.Pesquisa.DataGrid.TextBoxFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIF.Pesquisa.DataGrid"
             >
    <Grid>
        <local:DelayTextBox x:Name="txtFilter" Style="{StaticResource StyleTextBoxDataGrid}" TextChanged="TextFilter_TextChanged" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
