<UserControl x:Class="SIF.PesquisaView.DataGridControl.TextBoxFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:delay="clr-namespace:SIF.PesquisaView.DataGridControl">
    <Grid>
        <delay:TextBoxDelay x:Name="TxtFilter" Style="{StaticResource StyleTextBoxDataGrid}" TextChanged="TextFilterDelay_TextChanged" Text="{Binding TextFilter, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
